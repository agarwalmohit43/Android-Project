<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mohit.com.jsonfetch.ShowDetails">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">

       <ImageView
           android:id="@+id/showdetailsImage"
           android:layout_width="match_parent"
           android:src="@mipmap/ic_launcher"
           android:padding="10px"
           android:layout_height="wrap_content" />

       <TextView
           android:id="@+id/showdetailsheading"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Heading"
           android:padding="10px"
           android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
           android:layout_below="@+id/showdetailsImage"
           android:layout_centerHorizontal="true" />

       <TextView
           android:id="@+id/showdetailsDesc"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Description"
           android:padding="10px"
           android:layout_below="@+id/showdetailsheading"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="38dp" />


   </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>
